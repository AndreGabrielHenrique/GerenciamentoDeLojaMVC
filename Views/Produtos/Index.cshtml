@model IEnumerable<GerenciamentoDeLojaMVC.Models.Produtos>

@{
    ViewData["Title"] = "Lista de Produtos";
}

<link rel="stylesheet" href="~/css/site.css" asp-append-version="true">

<h1>@ViewData["Title"]</h1>

@if (Model != null && Model.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Nome</th>
                <th>Marca</th>
                <th>Pre√ßo</th>
                <th>Validade</th>
                <th></th>
                <th></th>
                <th></th>
            </tr>
        </thead>
        <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Nome</td>
                <td>@item.Marca</td>
                <td>@item.Preco</td>
                <td>@item.Validade?.ToString("dd/MM/yyyy")</td>
                <td><a asp-action="EditarProduto" id="editar" asp-route-id="@item.Id">Editar</a> </td>
                <td><a asp-action="DetalhesDoProduto" id="detalhes" asp-route-id="@item.Id">Detalhes</a></td>
                <td><a asp-action="ExcluirProduto" id="excluir" asp-route-id="@item.Id">Excluir</a></td>
            </tr>
        }
        </tbody>
    </table>
}
else
{
    <p>Nenhum produto encontrado.</p>
}
